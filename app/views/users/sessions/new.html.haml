%h2 Log in
-#
-# POST method for '/users/sign_in'
-# Information will be contained in params[:session]
-#
= form_for(:session, url: user_session_path, method: "post") do |f|
  -#
  - if @error_message
    = @error_message
  -#
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  -#
  .field
    = f.label :password
    %br/
    = f.password_field :password, autocomplete: "current-password"
  -#
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me
  -#
  .actions
    = f.submit "Log in"
-#
= render "users/shared/links"
